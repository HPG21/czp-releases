<data-extraction-rules>
    <cloud-backup>
        <!-- Включаем DataStore файлы в cloud backup -->
        <include domain="sharedpref" path="salary_history.preferences_pb"/>
        <include domain="file" path="salary_history.preferences_pb"/>
        <include domain="database" path="salary_history.preferences_pb"/>
        <!-- TODO: Use <include> and <exclude> to control what is backed up.
        <include .../>
        <exclude .../>
        -->
    </cloud-backup>
    <device-transfer>
        <!-- Включаем DataStore файлы в device transfer -->
        <include domain="sharedpref" path="salary_history.preferences_pb"/>
        <include domain="file" path="salary_history.preferences_pb"/>
        <include domain="database" path="salary_history.preferences_pb"/>
        <!--
        <include .../>
        <exclude .../>
        -->
    </device-transfer>
</data-extraction-rules>